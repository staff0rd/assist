{
	"name": "@staff0rd/assist",
	"version": "0.54.0",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"assist": "./dist/index.js"
	},
	"files": [
		"dist",
		"claude"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup",
		"start": "node dist/index.js",
		"verify:lint": "biome check --write .",
		"verify:build": "tsup",
		"verify:types": "tsc --noEmit",
		"verify:knip": "knip --no-progress --treat-config-hints-as-errors",
		"verify:duplicate-code": "jscpd --format 'typescript,tsx' --exitCode 1 --ignore '**/*.test.*' -r consoleFull src",
		"verify:maintainability": "assist complexity maintainability ./src --threshold 70",
		"verify:custom-lint": "assist lint"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"repository": {
		"type": "git",
		"url": "https://github.com/staff0rd/assist"
	},
	"dependencies": {
		"chalk": "^5.6.2",
		"commander": "^14.0.2",
		"diff": "^8.0.2",
		"enquirer": "^2.4.1",
		"is-wsl": "^3.1.0",
		"minimatch": "^10.1.1",
		"node-notifier": "^10.0.1",
		"semver": "^7.7.3",
		"typescript": "^5.9.3",
		"yaml": "^2.8.2",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/exec": "^7.1.0",
		"@semantic-release/git": "^10.0.1",
		"@types/node": "^24.10.1",
		"@types/node-notifier": "^8.0.5",
		"@types/semver": "^7.7.1",
		"jscpd": "^4.0.5",
		"knip": "^5.71.0",
		"semantic-release": "^25.0.2",
		"tsup": "^8.5.1"
	}
}
