{
	"statusLine": {
		"type": "command",
		"command": "assist status-line"
	},
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "Bash",
				"hooks": [{ "type": "command", "command": "assist cli-hook" }]
			}
		],
		"Notification": [
			{
				"matcher": "",
				"hooks": [{ "type": "command", "command": "assist notify" }]
			}
		]
	},
	"permissions": {
		"allow": [
			"Bash(assist status-line:*)",
			"Bash(assist notify:*)",
			"Bash(assist commit:*)",
			"Bash(assist devlog:*)",
			"Bash(assist complexity:*)",
			"Bash(assist refactor:*)",
			"Bash(assist prs list-comments:*)",
			"Bash(assist permit-cli-reads:*)",
			"Bash(assist cli-hook:*)",
			"Bash(assist sync:*)",
			"Bash(assist verify:*)",
			"Bash(assist backlog list:*)",
			"Bash(assist backlog start:*)",
			"Bash(assist backlog done:*)",
			"Bash(assist transcript summarise:*)",
			"Bash(assist complexity:*)",
			"Bash(assist transcript format:*)",
			"Bash(assist voice:*)",
			"Bash(date:*)",
			"Bash(git add:*)",
			"Bash(git status:*)",
			"Bash(git show:*)",
			"Bash(git diff:*)",
			"Bash(git grep:*)",
			"Bash(git log:*)",
			"Bash(gh repo view:*)",
			"Bash(gh pr checks:*)",
			"Bash(gh pr view:*)",
			"Bash(gh pr list:*)",
			"Bash(gh pr diff:*)",
			"Bash(gh run view:*)",
			"SlashCommand(/next-backlog-item)",
			"SlashCommand(/verify)",
			"SlashCommand(/commit)",
			"SlashCommand(/devlog)",
			"SlashCommand(/refactor)",
			"SlashCommand(/review-comments)",
			"SlashCommand(/transcript-format)",
			"SlashCommand(/transcript-summarise)",
			"SlashCommand(/voice-setup)",
			"SlashCommand(/voice-start)",
			"SlashCommand(/voice-stop)",
			"SlashCommand(/voice-status)",
			"SlashCommand(/voice-logs)",
			"SlashCommand(/journal)",
			"SlashCommand(/standup)",
			"Skill(next-backlog-item)",
			"Skill(verify)",
			"Skill(commit)",
			"Skill(devlog)",
			"Skill(refactor)",
			"Skill(review-comments)",
			"Skill(transcript-format)",
			"Skill(transcript-summarise)",
			"Skill(journal)",
			"Skill(standup)",
			"Skill(voice-setup)",
			"Skill(voice-start)",
			"Skill(voice-stop)",
			"Skill(voice-status)",
			"Skill(voice-logs)",
			"WebFetch(domain:staffordwilliams.com)"
		],
		"deny": ["Bash(git commit:*)", "Bash(npm run:*)", "Bash(npx assist:*)"]
	}
}
